<div>
    <div class="btn btn-default" ng-click="main.createFolder()">Create Folder</div>
</div>

<div>
    <div class="form-group">
        <label for="folder_name">Folder Name</label>
        <input type="text" class="form-control" id="folder_name" placeholder="new folder" ng-model="main.newFolderName">
    </div>
    <div class="form-group">
        <label for="folder_desc">Description</label>
        <textarea class="form-control" id="folder_desc" placeholder="description" ng-model="main.newFolderDesc"></textarea>
    </div>
</div>
